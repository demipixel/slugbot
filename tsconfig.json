{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["es2020.string"]
  },
  "include": ["*.ts", "*.js"],
  "exclude": ["node_modules", "dist"]
}
